<form method='POST' action="<%= action %>">
    <%= render "shared/errors", errors: flash[:errors], type: :base %>
    <input 
    type="hidden" 
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

    <label for="username-input">Username:
    <input id="username_input"
        type="text"
        name="user[username]" 
        value="<%= user.username %>">

   <%= render 'shared/errors', errors: flash[:errors], type: :username %>
    <label for="password-input">Password</label>
    <input
        id="password-input"
        type="test"
        name="user[password]">
       <%= render 'shared/errors', errors: flash[:errors], type: :username %>

    <button class="button"><%= submit_text %></button>
</form>